{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": ["ES2020"],
		"strict": true,
		"alwaysStrict": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "./build",
		"rootDir": ".",
		"typeRoots": ["./node_modules/@types", "./.tactica"]
	},
	"include": [
		"src/**/*.ts",
		".tactica/types.ts",
		".tactica/index.d.ts"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}
